{
  "compilerOptions": {
    "target": "es2017" ,
    "module": "commonjs",
    "declaration": true,
    "outDir": "build",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["**/node_modules", "**/*.test.*"]
}
